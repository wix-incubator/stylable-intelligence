{
	"version": "0.1.0",
	"configurations": [
		{
			"name": "Attach",
      "type": "node",
      "request": "attach",
      "sourceMaps": true,
      "outFiles": [ "${workspaceRoot}/../client/server/**/*.js" ],
      "protocol":"inspector",
      "port": 9229
    },
    {
      "name": "Run Tests",
      "request": "launch",
      "type": "node",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": ["--reporter", "mocha-env-reporter","../client/server/test/**/*.spec.js"],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    }
	]
}
